<h2>Quick Series Test for Array Sort without Array.Sort() and find the nth smallest element</h2>

<button onclick="myFunction()">Click here/Cliquez ici</button>

<p id="demo"></p>

<script>

function myFunction() {           
    try {
    var arr = [40, 100, 1, 5, 25, 10, 47, 1000, 107, 54, 2, 35];
    var n = 5;
      
    if (typeof arr == 'undefined') {
        document.getElementById("demo").innerHTML = "Invalid Array!";        
    }
    else if (arr.length === 0) {
        document.getElementById("demo").innerHTML = "Looks like array is empty!";        
    } else if (isNaN(n)) {
        document.getElementById("demo").innerHTML = "Looks like you are trying to find an invalid smallest number in the array !";        
    } else if (n <= 0 || n > (arr.length)) {
        document.getElementById("demo").innerHTML = "Looks like you are trying to find an invalid smallest number in the array!";        
    }
    else if(arr.some(isNaN)){
        document.getElementById("demo").innerHTML = "Looks like array contains some element which isn't a number!";        
    }
    else {
        document.getElementById("demo").innerHTML = nthSmallestNum(arr, n);
    }
            
      function nthSmallestNum()
      {      
      var i, j, k = 0;      
	  for(i = 0; i < arr.length; i++){
       for(j = 1; j < (arr.length-i); j++){
          if(arr[j-1] > arr[j]){
           k = arr[j-1];
           arr[j-1] = arr[j];
           arr[j] = k;
          }
       }
     }
     return arr[n-1];
    }
}
catch(err) {
    document.getElementById("demo").innerHTML = err.message;
}
    
}
</script>

</body>
