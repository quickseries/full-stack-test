function myFunction(int arr, int n) {
    try {
        if (typeof arr == 'undefined') {
            console.log("Invalid Array!");
        } else if (arr.length === 0) {
            console.log("Looks like array is empty!");
        } else if (isNaN(n)) {
            console.log("Looks like you are trying to find an invalid smallest number in the array !");
        } else if (n <= 0 || n > (arr.length)) {
            console.log("Looks like you are trying to find an invalid smallest number in the array!");
        }
        else if (arr.some(isNaN)) {
            console.log("Looks like array contains some element which isn't a number!");
        }
        else {
            console.log(nthSmallestNum(arr, n));
        }

        function nthSmallestNum() {
            var i, j, k = 0;
            for (i = 0; i < arr.length; i++) {
                for (j = 1; j < (arr.length - i); j++) {
                    if (arr[j - 1] > arr[j]) {
                        k = arr[j - 1];
                        arr[j - 1] = arr[j];
                        arr[j] = k;
                    }
                }
            }
            return arr[n - 1];
        }
    }
    catch (err) {
        console.log(err.message);
    }

}
